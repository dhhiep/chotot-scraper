<%= form_with(model: potential, local: true) do |form| %>
  <div class='form-group'>
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= form.label :phone %>
    <%= form.text_field :phone, class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= form.label :remind_at %>
    <%= form.text_field :remind_at, class: 'form-control' %>
  </div>
  <div class='row-actions'>
    <%= link_to 'Back', potentials_path, class: 'btn btn-primary'  %>
    <%= form.submit 'Submit', class: 'btn btn-success' %>
  </div>
<% end %>